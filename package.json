{
  "name": "@dpc-css/css",
  "version": "0.7.0",
  "description": "CSS components based on Drunken Parrot Flat UI",
  "main": "dist/dpc.css",
  "style": "dist/dpc.css",
  "exports": {
    ".": "./dist/dpc.css",
    "./variables": "./dist/variables.css",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src/scss"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "sass src/scss/index.scss dist/dpc.css --style=compressed --no-source-map && sass src/scss/_variables.scss dist/variables.css --style=compressed --no-source-map",
    "build:dev": "sass src/scss/index.scss dist/dpc.css --source-map",
    "watch": "sass src/scss/index.scss dist/dpc.css --watch --source-map",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write --unsafe ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/html": "^8.6.14",
    "@storybook/html-vite": "^8.6.14",
    "sass": "^1.97.3",
    "storybook": "^8.6.14",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "keywords": [
    "css",
    "ui",
    "components",
    "flat-ui"
  ],
  "license": "MIT"
}
